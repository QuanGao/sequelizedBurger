
<li class="list-group-item d-flex justify-content-between align-items-center">

    {{id}} . {{burger_name}} 

    {{#unless devoured}}
        <input type="text" name="{{id}}" placeholder="Customer?" class="customer">  
        <input type="number" placeholder="How many?" id="numInput">
        <button class="devourBtn btn-sm btn-outline-warning" data-id="{{id}}">
            Devour me!
        </button>
        
    {{else}}
        ( {{this.Customer.name}} Devoured {{this.Customer.burger_count}} )
        <button class="clearBtn btn-sm btn-outline-primary" data-id="{{id}}">   
            Clear
        </button>
    {{/unless}}

</li>


